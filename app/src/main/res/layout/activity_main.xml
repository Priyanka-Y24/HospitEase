<!-- res/layout/activity_main.xml -->
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

        <!-- Button for the Doctor -->

        <!-- Button for the Receptionist -->

        <!-- Button for the Accountant -->

        <Button
            android:id="@+id/doctorButton"
            android:layout_width="190dp"
            android:layout_height="114dp"
            android:layout_marginTop="32dp"
            android:text="Doctor"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.923"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/receptionButton"
            android:layout_width="191dp"
            android:layout_height="120dp"
            android:layout_marginTop="48dp"
            android:text="Reception"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.927"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/doctorButton" />

        <Button
            android:id="@+id/accountButton"
            android:layout_width="189dp"
            android:layout_height="117dp"
            android:layout_marginTop="44dp"
            android:text="Billing"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.923"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/receptionButton" />

        <Button
            android:id="@+id/adminButton"
            android:layout_width="189dp"
            android:layout_height="117dp"
            android:layout_marginTop="44dp"
            android:text="Admin"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.923"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/accountButton" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="167dp"
            android:layout_height="163dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/doct"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="-3dp" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="172dp"
            android:layout_height="153dp"
            android:src="@drawable/recept"
            app:layout_constraintTop_toBottomOf="@id/imageView"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="-5dp" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="168dp"
            android:layout_height="158dp"
            android:layout_marginTop="4dp"
            android:src="@drawable/acc"
            app:layout_constraintTop_toBottomOf="@id/imageView2"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="-2dp" />
        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="168dp"
            android:layout_height="158dp"
            android:layout_marginTop="4dp"
            android:src="@drawable/admin_image"
            app:layout_constraintTop_toBottomOf="@id/imageView3"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="-2dp" />

        <ScrollView
            android:layout_width="409dp"
            android:layout_height="651dp"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints,SpeakableTextPresentCheck"
            tools:layout_editor_absoluteX="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>