<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme for day mode. -->
    <style name="Theme.HMS" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color for day mode. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>

        <!-- Secondary brand color for day mode. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Customize other attributes for day mode here. -->
    </style>

    <!-- Base application theme for night mode. -->
    <style name="Theme.HMS.Night" parent="Theme.MaterialComponents.DayNight">
        <!-- Primary brand color for night mode. -->
        <item name="colorPrimary">@color/night_purple_200</item>
        <item name="colorPrimaryVariant">@color/night_purple_700</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color for night mode. -->
        <item name="colorSecondary">@color/night_teal_200</item>
        <item name="colorSecondaryVariant">@color/night_teal_200</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Customize other attributes for night mode here. -->
    </style>
</resources>
